<Window x:Class="SpareB_BGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpareB_BGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="612" Width="996">
    <Grid>
        <Button Content="Book Item" Click="BookItem_Click" Margin="647,88,209,452" RenderTransformOrigin="0.733,0.649" FontFamily="Arial Rounded MT Bold" FontSize="20"/>
        <ListBox Name="itemListBox" DisplayMemberPath="DisplayInfo" Margin="0,182,0,-85" d:ItemsSource="{d:SampleData ItemCount=5}">
        </ListBox>
        <TextBox x:Name="detailsTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="False" Margin="96,88,466,461" FontFamily="Segoe UI Semibold" FontSize="20"/>
        <Label Content="Book Now" HorizontalAlignment="Left" Margin="450,22,0,0" VerticalAlignment="Top" Height="42" Width="146" FontFamily="Arial Rounded MT Bold" FontSize="24"/>
        <Label Content="Available" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Height="42" Width="146" FontFamily="Arial Rounded MT Bold" FontSize="24"/>
    </Grid>
</Window>
